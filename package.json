{
  "name": "srilanka-citizen-portal",
  "version": "1.0.0",
  "private": true,
  "description": "Sri Lankan Government Citizen Portal - eGOV Services",
  "workspaces": [
    ".",
    "packages/*",
    "apps/*"
  ],
  "packageManager": "npm@10.8.2",
  "scripts": {
  "dev": "next dev",
  "build": "next build",
  "start": "next start",
  "lint": "next lint",
  "type-check": "tsc --noEmit",
  "clean": "node -e \"require('fs').rmSync('.next',{recursive:true,force:true}); require('fs').rmSync('.turbo',{recursive:true,force:true})\"",
  "repo:dev": "turbo run dev --parallel",
  "repo:build": "turbo run build",
  "repo:lint": "turbo run lint --parallel",
  "repo:type-check": "turbo run type-check --parallel",
  "repo:clean": "turbo run clean --parallel || echo clean",
  "dev:all": "turbo run dev --filter=... --parallel"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.45.4",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "next": "~15.3.0",
    "next-i18next": "^15.0.0",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.4.31",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-calendar": "^4.6.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.47.0",
    "react-query": "^3.39.3",
  "tailwindcss": "^3.3.5",
  "zustand": "^4.4.4",
  "@egov/types": "file:packages/types",
  "@egov/ui": "file:packages/ui"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "eslint": "^8.57.0",
    "eslint-config-next": "~15.3.0",
    "typescript": "^5.2.2",
    "turbo": "^2.0.6"
  }
}
